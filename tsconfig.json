{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "jsx": "preserve",
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": false,
        "esModuleInterop": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "lib": [
            "ES2020"
        ],
        "downlevelIteration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES2020",
        "typeRoots": [
            "./typings/index.globals.d.ts"
        ]
    },
    "exclude": [
        "dist",
        "index.js",
        "config.json",
        "_buildscript.js",
        "server-files"
    ]
}